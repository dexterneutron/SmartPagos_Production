<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

                       <!-- Registration Form -->
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clave Actual"
                    android:id="@+id/clave"
                    android:padding="5dp"
                    android:layout_marginTop="15dp"/>

                <EditText android:id="@+id/resp_clave"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dip"
                    android:singleLine="true"
                    android:layout_toEndOf="@+id/clave"
                    android:layout_toRightOf="@+id/clave"/>
                <!--  Email Label -->
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nueva Clave"
                    android:id="@+id/new_clave"
                    android:layout_below="@+id/resp_clave"
                    android:padding="5dp"
                    android:layout_marginTop="15dp"/>

                <EditText android:id="@+id/resp_new_clave"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dip"
                    android:singleLine="true"
                    android:layout_toEndOf="@+id/new_clave"
                    android:layout_toRightOf="@+id/new_clave"
                    android:layout_below="@+id/resp_clave"/>
                <!-- Password Label -->
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Conf. Clave Nueva"
                    android:id="@+id/conf_new_clave"
                    android:layout_below="@+id/resp_new_clave"
                    android:padding="5dp"
                    android:layout_marginTop="15dp"/>
                <EditText android:id="@+id/resp_conf_clave"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:singleLine="true"
                    android:layout_marginTop="5dip"
                    android:layout_toEndOf="@+id/conf_new_clave"
                    android:layout_toRightOf="@+id/conf_new_clave"
                    android:layout_below="@+id/resp_new_clave"/>
                <!-- Register Button -->
                <Button android:id="@+id/boton_cambiar"
                    style="@style/btnStyleBlackpearl"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dip"
                    android:text="Enviar"
                    android:layout_below="@id/resp_conf_clave"
                    android:layout_centerHorizontal="true"
                    />
                <!-- Link to Login Screen -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/logoglobal"
        android:layout_gravity="bottom"
        android:src="@drawable/distribuidoralogo"
        android:contentDescription="logo"
        android:background="#ffffffff"
        android:layout_marginTop="250dp"
        android:layout_below="@+id/boton_cambiar"/>


    </RelativeLayout>
            <!-- Registration Form Ends -->

