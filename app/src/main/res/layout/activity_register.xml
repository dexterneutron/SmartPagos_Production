<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffff9809">
    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registro de Usuario"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textSize="30dp"
        />
    <TextView
        android:id="@+id/nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nombre"
        android:textColor="#000000"
        android:layout_below="@+id/titulo"
        android:layout_alignParentLeft="true"
        android:textSize="30dp"
        android:layout_marginTop="10sp"/>
    <EditText
        android:id="@+id/editnombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre de Usuario"
        android:textColor="#000000"
        android:layout_below="@+id/titulo"
        android:layout_toEndOf="@+id/nombre"
        android:layout_toRightOf="@+id/nombre"
        android:textSize="20dp"
        android:layout_marginTop="10sp"/>
    <TextView
        android:id="@+id/apellido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/apellido"
        android:textColor="#000000"
        android:textSize="30dp"
        android:layout_below="@+id/nombre"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:id="@+id/editapellido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:hint="Apellido de Usuario"
        android:layout_toEndOf="@+id/apellido"
        android:layout_toRightOf="@+id/apellido"
        android:textSize="20dp"
        android:layout_below="@+id/editnombre"/>
    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="@string/email"
        android:textSize="30dp"
        android:layout_above="@+id/edituser"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:id="@+id/editemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:inputType="textEmailAddress"
        android:hint="ejemplo@smartpagos.com"
        android:layout_below="@+id/editapellido"
        android:layout_toEndOf="@+id/email"
        android:layout_toRightOf="@+id/email"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="@string/usuario"
        android:textSize="30dp"
        android:layout_alignBottom="@+id/edituser"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/edituser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:hint="Username"
        android:layout_below="@+id/editemail"
        android:layout_toEndOf="@+id/user"
        android:layout_toRightOf="@+id/user"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/passw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="@string/password"
        android:textSize="30dp"
        android:layout_below="@+id/user"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <EditText
        android:id="@+id/editpword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:inputType="textPassword"
        android:hint="Password"
        android:layout_toEndOf="@+id/passw"
        android:layout_toRightOf="@+id/passw"
        android:layout_below="@+id/edituser"
        android:textSize="20dp"/>



    <Button
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Register"
        android:layout_below="@+id/passw"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:layout_marginTop="20sp" />
    <TextView
        android:id="@+id/register_error"
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:textColor="#000000"
        android:layout_below="@+id/register"
        android:layout_alignParentRight="true"
        android:textSize="30dp"/>
</RelativeLayout>
